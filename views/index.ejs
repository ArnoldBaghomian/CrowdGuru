<body>

  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <div  class="logo">
      <img ui-sref="splash" src="images/crowdGuruIcon.png"/>
    </div>
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="center-buttons">
        <!-- <li class="divider"></li> -->
        <li><a class="full-buttons" ui-sref="profile">Profile</a></li>
        <!-- <li class="divider"></li> -->
        <li><a class="full-buttons" ui-sref="requestSearch">Request Search</a></li>
        <!-- <li class="divider"></li> -->
        <li><a class="full-buttons" ui-sref="requestNew">Request a Guru</a></li>
        <!-- <li class="divider"></li> -->
        <li><a class="full-buttons" ui-sref="register">Register</a></li>
        <!-- <li class="divider"></li> -->
      </ul>
    </section>
  </nav>




  <ui-view></ui-view>

  <footer id="contact">
      <ul class="row">
        <li class="small-3 columns">
          <h3>ZRA</h3>
          <p>Founders of CrowdGuru</p>
        </li>
        <li class="small-3 columns">
          <h3>Become a Guru</h3>
         <a ui-sref="register">Register Now</a>
        </li>
        <li class="small-3 columns">
          <h3>Contact Us</h3>
          <p>crowdguru@cg.com</p>
        </li>
        <li class="small-3 columns">
          <h3>Social Media</h3>
       <i class="fi-social-facebook"></i>
       <i class="fi-social-linkedin"></i>
       <i class="fi-social-twitter"></i>   
        </li>
      </ul>
  </footer>

  <script>
    $(document).foundation();
  </script>

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:500">
</body>
</html>
