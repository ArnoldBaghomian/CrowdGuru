<!DOCTYPE html>
<html ng-app="crowdGuru" ui-router-styles>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= title %></title>
  <base href="/">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:500">

  <link rel="stylesheet" href="bower_components/foundation/css/foundation.min.css" />
  <link rel="stylesheet" href="bower_components/foundation-icon-fonts/foundation-icons.css">
  <link rel="stylesheet" href="css/index.css" />

  <script src="bower_components/angular/angular.min.js"></script>
  <script src="bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
  <script src="bower_components/angular-ui-router-styles/ui-router-styles.js"></script>
  <script src="bower_components/angular-jwt/dist/angular-jwt.min.js"></script>
  <script src="bower_components/jquery/dist/jquery.min.js"></script>
  <script src="bower_components/foundation/js/foundation.min.js"></script>
  <script src="bower_components/cookies-js/dist/cookies.min.js"></script>
  <script src="bower_components/moment/min/moment.min.js"></script>
  <script src="bower_components/angular-md5/angular-md5.js"></script>
  <script src="js/bundle.js"></script>

</head>

<body ng-controller="appCtrl">

   <nav class="top-bar" data-topbar ng-controller="navCtrl">
    <ul class="title-area">
      <li>
        <div class="logo">
          <img ui-sref="splash" src="images/crowdGuruIcon.png"/>
        </div>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>


    <section class="top-bar-section" id="navbar_items">
      <ul>
        <li><a ui-sref="profile">Profile</a></li>
        <li><a ui-sref="requestSearch">Request Search</a></li>
        <li><a ui-sref="requestNew">Request a Guru</a></li>
        <li><a ng-if="!loggedIn" ui-sref="register">Register</a></li>
        <li><a ng-if="!loggedIn" ui-sref="login">Login</a></li>
        <li><a ng-if="loggedIn" ng-click="logout()">Logout</a></li>
      </ul>
    </section>
  </nav>

  <ui-view></ui-view>

  <div>

    <div data-alert ng-click="showSuccessAlert = !showSuccessAlert" ng-show="showSuccessAlert" class="alert-box success radius">
      {{alert.message}}
      <a href="#" class="close">&times;</a>
    </div>

    <div data-alert ng-click="showWarningAlert = !showWarningAlert" ng-show="showWarningAlert" class="alert-box warning round">
      {{alert.message}}
      <a href="#" class="close">&times;</a>
    </div>

    <div data-alert ng-click="showInfoAlert = !showInfoAlert" ng-show="showInfoAlert" class="alert-box info radius">
      {{alert.message}}
      <a href="#" class="close">&times;</a>
    </div>

    <div data-alert ng-click="showRoundedAlert = !showRoundedAlert" ng-show="showRoundedAlert" class="alert-box alert round">
      {{alert.message}}
      <a href="#" class="close">&times;</a>
    </div>

    <div data-alert ng-click="showSecondaryAlert = !showSecondaryAlert" ng-show="showSecondaryAlert" class="alert-box secondary">
      {{alert.message}}
      <a href="#" class="close">&times;</a>
    </div>

  </div>

  <footer id="contact">
      <ul class="row">
        <li class="small-3 columns">
          <h3>ZRA</h3>
          <p>Founders of CrowdGuru</p>
        </li>
        <li class="small-3 columns">
          <h3>Become a Guru</h3>
         <a ui-sref="register">Register Now</a>
        </li>
        <li class="small-3 columns">
          <h3>Contact Us</h3>
          <p>crowdguru@cg.com</p>
        </li>
        <li class="small-3 columns">
          <h3>Social Media</h3>
       <i class="fi-social-facebook"></i>
       <i class="fi-social-linkedin"></i>
       <i class="fi-social-twitter"></i>
        </li>
      </ul>
  </footer>

  <script>
    $(document).foundation();
  </script>
</body>
</html>
